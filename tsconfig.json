
{
  "compilerOptions": {
      "lib": [
          "es5",
          "es6"
      ],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
  },
  "include": [
      "src/**/*"
  ]
}